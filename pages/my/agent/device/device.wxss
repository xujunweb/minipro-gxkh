/* pages/my/agent/device/device.wxss */
page{
  background: #fff;
}
.top{
  position: fixed;top: 0;left: 0;
  width: 100%;height: 70rpx;border-bottom: 1rpx solid #e6e6e6;
  line-height: 70rpx;font-size: 28rpx;color: #888;background: #fff;
  display: flex;z-index: 1;
}
.top view{
  text-align: center;width: 33.333%;
}
.num{
  font-size: 28rpx;line-height: 60rpx;padding-left: 20rpx;
  color: #888;
}
.search{
  display: flex;font-size: 26rpx;color: #888;padding: 0 20rpx;line-height: 50rpx;
  margin-bottom: 20rpx;
}
.search input{
  line-height: 50rpx;font-size: 26rpx;border: 1rpx solid #ccc;
  width: 500rpx;border-radius: 10rpx;padding: 0 20rpx;
}
.item{
  background: #fff;margin-bottom: 20rpx;padding-bottom: 15rpx;box-shadow: 0rpx 0 20rpx #ccc;
}
.item .one{
  padding-top: 10rpx;display: flex;
  line-height: 40rpx;font-size: 26rpx;
}
.item .one view{
  width: 33.333%;
  position: relative;text-align: center;
}
.item .one view::after{
  content: '';height: 20rpx;width: 1rpx;background: #e6e6e6;position: absolute;
  right: 0;top: 10rpx;
}
.item .one view.nob::after{
  width: 0;
}
.item .two{
  font-size: 26rpx;padding: 10rpx 20rpx;padding-bottom: 0;
}