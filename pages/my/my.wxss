.my{
  height: 100%;
  background: #fff;
}

.top {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ca598c;
  padding-bottom: 100rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-top: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}

.operation{
  margin-top: -40rpx;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}
.operation .item{
  font-size: 28rpx;
  text-align: center;
  width: 250rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx #c5c5c5;
  background: #fff;
  padding: 30rpx;
}
.operation .item image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}
