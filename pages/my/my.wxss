.my{
  height: 100%;
  background: #fff;
}

.top {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-image: url(https://www.chmbkh.com/mobile/stat/img/845662344.jpg);
  background-size: 100% 100%;
  height: 480rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-top: 40rpx;
  border-radius: 100rpx;
  overflow: hidden;
  border: 12rpx solid #ed88b2;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}

.operation{
  margin-top:60rpx;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}
.operation .item{
  text-align: center;
  width: 310rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx #c5c5c5;
  background: #E24473;
  padding: 30rpx 0;
  color: #fff;
  font-size: 36rpx;
}
.operation .item image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
.operation .order{
}
.fenge{height: 10rpx;background: #f5f5f5;width: 100%;margin-top: 40rpx;}
.caidan{
  padding-left: 40rpx;
  margin-bottom: 50rpx;
}
.caidan .item{
  padding: 20rpx 40rpx;
  padding-left: 0;
  border-bottom: 2rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
}
.caidan .item .left{
  display: flex;align-items: center;
}
.caidan .item .arrwo{
  width: 20rpx;
  height: 20rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
}
.caidan .item .text{
  color: #999;font-size: 26rpx;
}
.caidan .item image{
  width: 50rpx;height: 50rpx;margin-right: 20rpx;
}
