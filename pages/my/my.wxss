.my{
  height: 100%;
  background: #eee;
}

.top {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding-bottom: 40rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 28rpx;
}

.operation{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.operation .item{
  font-size: 28rpx;
  text-align: center;
  width: 50%;
  background: #fff;
  padding: 30rpx;
}
.operation .item image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}
.operation .order{
  border-right: 2rpx solid #999;
}
