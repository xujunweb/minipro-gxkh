.my{
  height: 100%;
  background: #fff;
}

.top {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-image: url(https://www.chmbkh.com/mobile/stat/img/845662344.jpg);
  background-size: 100% 100%;
  height: 480rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-top: 40rpx;
  border-radius: 100rpx;
  overflow: hidden;
  border: 12rpx solid #ed88b2;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}

.operation{
  margin-top:70rpx;
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}
.operation .item{
  text-align: center;
  width: 310rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx #c5c5c5;
  background: #E24473;
  padding: 38rpx 0;
  color: #fff;
  font-size: 36rpx;
}
.operation .item image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 30rpx;
}
