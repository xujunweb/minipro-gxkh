.order{
  height: 100%;
  background: #fff;
}
.fixedDIV{
  height: 90rpx;
}
.top {
  position: fixed;
  display: flex;
  align-items: center;
  background: #fff;
  top: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  border-bottom: 2rpx solid #eee;
  z-index: 9;
}
.top .item{
  width: 50%;
  text-align: center;
  font-size: 28rpx;
  color: #ca2c89;
  position: relative;
  line-height: 90rpx;
}
.top .hover::after{
  display: inline-block;
  content: '';
  position: absolute;
  width: 30%;
  height: 6rpx;
  background: #ca2c89;
  bottom: 0;
  left: 35%;
  border-radius: 10rpx;
}
.noorder{
  margin-top: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ccc;
}
.noorder image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 100rpx;
}

.orderlist{
  padding: 0 30rpx;
}
.orderlist .item{
  background: #fff;
  border-radius: 10rpx;
  border: 2rpx solid #f5f5f5;
  box-shadow: 0rpx 0 20rpx #ccc;
  margin: 0 auto;
  margin-top: 30rpx;
  font-size: 26rpx;
  padding: 30rpx 40rpx;
  line-height: 48rpx;
  position: relative;
}
.orderlist .item text{
  color: #666;
}
